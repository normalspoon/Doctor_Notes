<%- include('../../partials/header') %>

<h3>First Name</h3>
<div><%= patient.firstname %></div>
<h3>Surname</h3>
<div><%= patient.surname %></div>
<h3>Date of Birth</h3>
<div><%= patient.dob.toLocaleDateString() %></div>

<br><br>
<form id="add-performer-form" action="/patients/<%= patient._id %>/notes/<%= note.id %>?_method=PUT" method="POST">
  <label>History and Symptoms:</label>
  <input type="text" name="history" value = "<%= note.history %>">
  <label>Medications:</label>
  <input type="text" name="medications" value = "<%= note.medications %>">
  <label>Treatment Notes:</label>
  <input type="text" name="treatment" value = "<%= note.treatment %>">
  <button type="submit">Update Note</button>
</form>

<%- include('../../partials/footer') %>

