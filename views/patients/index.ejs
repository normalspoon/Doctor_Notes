<%- include('../partials/header') %>
<h2>All Patients</h2>
<form id="add-patient"action="/patients/new" method="GET">
    <button id="add-patient-button" type="submit" <%- title === 'A' ? 'class="active"' : '' %>>Add new Patient</button>
</form>
<table id="patient-list">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Surname</th>
        <th>Date of Birth</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% patients.forEach(function(p) { %>
        <tr>
          <td><%= p.firstname %></td>
          <td><%= p.surname %></td>
          <td><%= p.dob.toLocaleDateString('en-AU') %></td>
          <td id="table-buttons">
            <form action="/patients/<%= p._id %>" method="GET">
              <button type="submit">SELECT</button>
            </form>
            <form action= "/patients/<%= p._id  %>?_method=DELETE" method="POST">
            <button id="delete-button" type="submit">X</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>


<%- include('../partials/footer') %>
