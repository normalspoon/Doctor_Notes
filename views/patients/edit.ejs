<%- include('../partials/header') %>

<h2>Edit Patient Details</h2>
<form id="new-form" action="/patients/<%= patient.id %>?_method=PUT" method="POST">
  <label>First name:
    <input type="text" name="firstname" value= <%= patient.firstname %>>
  </label>
  <label>Surname:
    <input type="text" name="surname" value= <%= patient.surname %>>
  </label>
  <label>Date of Birth:
    <input type="date" name="dob" value="<%= (patient.dob).toISOString().slice(0,10) %>">
  </label>
  <label>Address:
    <input type="text" name="address" value= <%= patient.address %>>
  </label>
  <label>Email:
    <input type="text" name="email" value= <%= patient.email %>>
  </label>
  <label>Phone Number:
    <input type="number" name="phoneNo" value= <%= patient.phoneNo %>>
  </label>
  <button type="submit">Update Patient</button>
</form>

<%- include('../partials/footer') %>
